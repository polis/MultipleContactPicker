<resources>

    <!-- Base application theme. -->
    <style name="ContactPickerTheme" parent="Theme.AppCompat">

        <item name="actionBarStyle">@style/ContactPickerTheme.ActionBarStyle</item>
        <!--item name="android:actionBarStyle">@style/ContactPickerTheme.ActionBarStyle</item-->

        <item name="actionModeStyle">@style/ContactPickerTheme.ActionMode</item>

    </style>

    <style name="ContactPickerTheme.ActionBarStyle" parent="@style/Base.Widget.AppCompat.ActionBar">
        <item name="background">@drawable/actionbar_bg</item>
        <item name="titleTextStyle">@style/ContactPickerTheme.ActionMode.ActionBarTextStyle</item>

    </style>

    <style name="ContactPickerTheme.ActionMode" parent="@style/Base.Widget.AppCompat.ActionMode">
        <item name="background">@drawable/actionbar_bg</item>
        <item name="backgroundSplit">?attr/actionModeSplitBackground</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="titleTextStyle">@style/ContactPickerTheme.ActionMode.ActionBarTextStyle</item>
        <item name="subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle</item>
        <item name="closeItemLayout">@layout/ab_close_btn_layout</item>
    </style>

    <style name="ContactPickerTheme.ActionMode.ActionBarTextStyle" parent = "@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FF7474</item>

    </style>



</resources>


